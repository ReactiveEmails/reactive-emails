{
	"name": "reactive-emails-monorepo",
	"type": "module",
	"scripts": {
		"prepare": "lion-git-hooks",
		"lint": "pnpm recursive run lint",
		"prettier": "pnpm recursive run prettier",
		"tc": "pnpm recursive run tc",
		"test": "pnpm recursive run test",
		"dev:desktop": "pnpm run dev --filter=./packages/reactive-emails-desktop-app",
		"dev:website": "pnpm run dev --filter=./packages/reactive-emails-website"
	},
	"devDependencies": {
		"@commitlint/cli": "^15.0.0",
		"@leonzalion/configs": "^1.1.13",
		"@types/node": "^17.0.0",
		"desm": "^1.2.0",
		"eslint": "^8.5.0",
		"eslint-define-config": "^1.2.5",
		"execa": "^6.0.0",
		"lint-staged": "^12.1.3",
		"lion-git-hooks": "^1.0.2",
		"lion-system": "latest",
		"prettier": "^2.5.1",
		"tsc-alias": "^1.6.1",
		"typescript": "^4.6.2"
	},
	"lint-staged": {
		"*.{js,ts,vue}": [
			"pnpm run lint",
			"pnpm run prettier"
		]
	},
	"prettier": "@leonzalion/configs/prettier.cjs",
	"commitlint": {
		"extends": [
			"@leonzalion/configs/commitlint.cjs"
		]
	}
}
