{
	"name": "@reactive-emails/app",
	"description": "A tool to help manage reactive emails.",
	"author": {
		"email": "contact@leonzalion.com",
		"name": "Leon Si",
		"url": "https://leonzalion.com"
	},
	"private": true,
	"main": "main/dist/main.cjs",
	"scripts": {
		"build": "pnpm run build:main && pnpm run build:preload && pnpm run build:renderer",
		"build:main": "cd ./main && vite build",
		"build:preload": "cd ./preload && vite build",
		"build:renderer": "cd ./renderer && vite build",
		"compile": "cross-env MODE=production pnpm run build && electron-builder build --config .electron-builder.config.cjs --dir --config.asar=false",
		"admin-console": "node-ts test/bin/admin-console.ts",
		"test": "pnpm run test:main && pnpm run test:preload && pnpm run test:renderer && pnpm run test:e2e",
		"test:e2e": "pnpm run build && vitest run",
		"test:main": "vitest run -r main --passWithNoTests",
		"test:preload": "vitest run -r preload --passWithNoTests",
		"test:renderer": "vitest run -r renderer --passWithNoTests",
		"dev": "node-ts scripts/watch.ts",
		"run": "pnpm exec electron .",
		"typecheck:main": "tsc --noEmit -p main/tsconfig.json",
		"typecheck:preload": "tsc --noEmit -p preload/tsconfig.json",
		"typecheck:renderer": "vue-tsc --noEmit -p renderer/tsconfig.json",
		"typecheck": "pnpm run typecheck:main && pnpm run typecheck:preload && pnpm run typecheck:renderer"
	},
	"dependencies": {
		"@commonjs/execa": "npm:execa@^5.1.1",
		"desm": "^1.2.0",
		"electron-updater": "5.0.1",
		"jquery": "^3.6.0",
		"nanoid": "^3.3.2",
		"onetime": "^6.0.0",
		"p-wait-for": "^4.1.0",
		"puppeteer-core": "^13.5.2",
		"puppeteer-in-electron": "^3.0.5",
		"reactive-emails": "^0.0.2",
		"uuid": "^8.3.2",
		"vue": "3.2.31"
	},
	"devDependencies": {
		"@rollup/plugin-inject": "^4.0.4",
		"@rollup/plugin-node-resolve": "^13.3.0",
		"@types/jquery": "^3.5.14",
		"@types/node": "^17.0.35",
		"@vitejs/plugin-vue": "2.3.1",
		"@vue/test-utils": "2.0.0-rc.19",
		"cross-env": "7.0.3",
		"electron": "^18.0.3",
		"electron-builder": "23.0.3",
		"electron-devtools-installer": "3.2.0",
		"happy-dom": "2.55.0",
		"puppeteer": "^13.5.2",
		"rollup": "^2.70.1",
		"rollup-plugin-bundle-esm": "^0.1.1",
		"rollup-plugin-js-imports": "^1.2.1",
		"typescript": "^4.6.3",
		"vite": "2.9.1",
		"vite-plugin-windicss": "^1.8.4",
		"vitest": "0.9.2",
		"vue-tsc": "0.34.0"
	}
}
