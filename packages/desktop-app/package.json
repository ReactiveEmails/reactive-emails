{
	"name": "reactive-emails-desktop-app",
	"private": true,
	"type": "module",
	"main": "main/dist/index.cjs",
	"scripts": {
		"build": "pnpm run build:main && pnpm run build:preload && pnpm run build:renderer",
		"build:main": "cd ./main && vite build",
		"build:preload": "cd ./preload && vite build",
		"build:renderer": "cd ./renderer && vite build",
		"compile": "cross-env MODE=production npm run build && electron-builder build --config .electron-builder.config.js --dir --config.asar=false",
		"test": "npm run test:main && npm run test:preload && npm run test:renderer && npm run test:e2e",
		"test:e2e": "npm run build && vitest run",
		"test:main": "vitest run -r main --passWithNoTests",
		"test:preload": "vitest run -r preload --passWithNoTests",
		"test:renderer": "vitest run -r renderer --passWithNoTests",
		"dev": "node-ts scripts/watch.ts",
		"lint": "eslint . --ext js,ts,vue",
		"prettier": "prettier --write '**/*.{js,ts,cjs,mjs,json}'",
		"tc:main": "tsc --noEmit -p main/tsconfig.json",
		"tc:preload": "tsc --noEmit -p preload/tsconfig.json",
		"tc:renderer": "vue-tsc --noEmit -p renderer/tsconfig.json",
		"tc": "pnpm run tc:main && pnpm run tc:preload && pnpm run tc:renderer"
	},
	"devDependencies": {
		"@vitejs/plugin-vue": "2.2.4",
		"@vue/test-utils": "2.0.0-rc.17",
		"cross-env": "7.0.3",
		"electron": "^17.1.2",
		"electron-builder": "22.14.13",
		"electron-devtools-installer": "3.2.0",
		"happy-dom": "2.46.0",
		"playwright": "1.19.2",
		"rollup": "^2.70.0",
		"vite": "2.8.6",
		"vitest": "0.6.0",
		"vue-tsc": "0.32.1"
	},
	"dependencies": {
		"reactive-emails": "link:../utilities/dist",
		"desm": "^1.2.0",
		"electron-updater": "4.6.5",
		"vue": "3.2.31"
	}
}
