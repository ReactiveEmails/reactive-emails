{
	"extends": "../tsconfig.json",
	"compilerOptions": {
		"types": ["node"],
		"module": "ESNext",
		"baseUrl": ".",
		"paths": {
			"~r/*": ["./src/*"],
			"~m": ["../main/src/*"],
			"~p": ["../preload/src/*"]
		},
		"lib": ["ESNext", "dom", "dom.iterable"]
	},
	"include": [
		"src/**/*.vue",
		"src/**/*.ts",
		"typings/**/*.d.ts",
		"../typings/**/*.d.ts",
		"typings/contracts.d.ts",
		"../preload/**/*.ts"
	]
}
