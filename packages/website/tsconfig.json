{
	"compilerOptions": {
		"target": "esnext",
		"useDefineForClassFields": true,
		"module": "esnext",
		"moduleResolution": "node",
		"strict": true,
		"jsx": "preserve",
		"sourceMap": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"types": ["vue/ref-macros", "vite/client"],
		"lib": ["esnext", "dom"],
		"typeRoots": ["node_modules/@types", "./typings"]
	}
}
